{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "build",
            "isBuildCommand": true,
            "command": "go",
            "isShellCommand": true,
            "args": ["build" ],
            "showOutput": "always"
        },
        {
            "taskName": "run",
            "command": "go",
            "isShellCommand": true,
            "args": ["run", "${file}" ],
            "showOutput": "always"
        }
    ]
}